# EditorConfig помогает поддерживать единый стиль кода
# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{json,yaml,yml,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Настройки для Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

# Taskfile и скрипты
[{Taskfile.yml,*.sh}]
indent_style = space
indent_size = 2

# Настройки для Makefile, которые всегда используют табуляцию
[Makefile]
indent_style = tab

# Настройки для Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100
